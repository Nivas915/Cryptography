#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    char plaintext[100], ciphertext[100];
    char plaintextAlphabet[] = "abcdefghijklmnopqrstuvwxyz";
    char ciphertextAlphabet[] = "QWERTYUIOPASDFGHJKLZXCVBNM"; 
	int i, j;
    printf("Enter the plaintext: ");
    fgets(plaintext, sizeof(plaintext), stdin);
    for (i = 0; plaintext[i] != '\0'; i++) {
        char ch = plaintext[i];

        if (isalpha(ch)) {
            int isUpper = isupper(ch);
            ch = tolower(ch);
			          for (j = 0; j < 26; j++) {
                if (ch == plaintextAlphabet[j]) {
                    ciphertext[i] = isUpper ? toupper(ciphertextAlphabet[j]) : ciphertextAlphabet[j];
                    break;
                }
            }
        } else {
            ciphertext[i] = ch;
        }
    }

    ciphertext[i] = '\0'; 
    printf("Ciphertext: %s\n", ciphertext);

    return 0;
}
